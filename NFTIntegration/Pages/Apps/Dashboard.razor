@layout MainLayout
@page "/apps/dashboard"
@inject NavigationManager navigationManager
@inject IJSRuntime jsRunTime
@inject ILocalStorageService localStorageService
@inject NavigationManager NavigationManager
@using Classes
@using Data;
@using NFTIntegration.Models.Account

<div class="float-lg-right">
    <button class="btn" @onclick="CaptureScreenShot"><i class="oi oi-camera-slr"></i></button>
</div>

<h2>Dashboard</h2>
<div class="center">
    <h3>Vulnerable report summary</h3>
</div>
<div id="chartdiv" style="height: 400px;"></div>

@code{

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        ZapAlerts zapAlert = new ZapAlerts();

        if (firstRender)
        {
            try
            {
                var zapAlerts = zapAlert.GetZapAlerts();
                await jsRunTime.InvokeVoidAsync("generateChartInPercentage", zapAlerts);
            }
            catch (Exception e)
            {
                Console.WriteLine(e.StackTrace.ToString());
            }
        }
    }

    protected override async Task OnInitializedAsync()
    {
        try
        {
            await Task.Run(() =>
            {
                var userDetails = localStorageService.GetItem<User>("user").Result;

                if (userDetails == null || (userDetails != null && userDetails.UserId == 0))
                {
                    NavigationManager.NavigateTo("/account/login");
                }
            }).ConfigureAwait(false);
        }
        catch { }
    }
}

@functions {
    private void CaptureScreenShot()
    {
        FileUtil.SaveAs(jsRunTime, $"Dashboard_{DateTime.Now.ToString("ddMMyyyyHHmmss")}.jpg").ConfigureAwait(false);
    }
}