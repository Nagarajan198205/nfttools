<div class="top-row pl-4 navbar navbar-dark">
    <a class="navbar-brand" href="">Security Tools</a>
    <button class="navbar-toggler">
        <span class="navbar-toggler-icon"></span>
    </button>
</div>


<div class="@NavMenuCssClass" @onclick="ToggleNavMenu">
    <ul class="nav flex-column">
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="/" Match="NavLinkMatch.All">
                <span class="oi oi-home" aria-hidden="true"></span>Home
            </NavLink>
        </li>
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="" @onclick="()=>expandSubMenu1= !expandSubMenu1">
                <span class="oi oi-book" aria-hidden="true"></span>Information Gathering
            </NavLink>
            @if (expandSubMenu1)
            {
                <ul class="nav flex-column">
                    <li class="nav-item px-3">
                        <NavLink class="nav-link" href="Nmap">
                            <span class="oi oi-map" aria-hidden="true"></span>Nmap
                        </NavLink>
                    </li>
                </ul>
            }
        </li>

        <li class="nav-item px-3">
            <NavLink class="nav-link" href="" @onclick="()=>expandSubMenu2= !expandSubMenu2">
                <span class="oi oi-globe" aria-hidden="true"></span>Web Application Analysis
            </NavLink>
            @if (expandSubMenu2)
            {

                <ul class="nav flex-column">
                    <li class="nav-item px-3">
                        <NavLink class="nav-link" href="httack">
                            <span class="oi oi-info" aria-hidden="true"></span>httack
                        </NavLink>
                    </li>
                    <li class="nav-item px-3">
                        <NavLink class="nav-link" href="webscarab">
                            <span class="oi oi-globe" aria-hidden="true"></span>webscarab
                        </NavLink>
                    </li>
                </ul>
            }
        </li>

        <li class="nav-item px-3">
            <NavLink class="nav-link" href="" @onclick="()=>expandSubMenu3= !expandSubMenu3">
                <span class="oi oi-script" aria-hidden="true"></span>Web Vulnerability Scanners
            </NavLink>
            @if (expandSubMenu3)
            {
                <ul class="nav flex-column">
                    <li class="nav-item px-3">
                        <NavLink class="nav-link" href="waptit">
                            <span class="oi oi-fire" aria-hidden="true"></span>waptit
                        </NavLink>
                    </li>
                    <li class="nav-item px-3">
                        <NavLink class="nav-link" href="cadaver">
                            <span class="oi oi-camera-slr" aria-hidden="true"></span>cadaver
                        </NavLink>
                    </li>
                </ul>
            }
        </li>

        <li class="nav-item px-3">
            <NavLink class="nav-link" href="" @onclick="()=>expandSubMenu4= !expandSubMenu4">
                <span class="oi oi-tag" aria-hidden="true"></span>Password Attacks
            </NavLink>
            @if (expandSubMenu4)
            {
                <ul class="nav flex-column">
                    <li class="nav-item px-3">
                        <NavLink class="nav-link" href="hashidentifier">
                            <span class="oi oi-tag" aria-hidden="true"></span>hash-identifier
                        </NavLink>
                    </li>
                </ul>
            }
        </li>
    </ul>
</div>

@code
    {
    private bool collapseNavMenu = true;
    private bool expandSubMenu1;
    private bool expandSubMenu2;
    private bool expandSubMenu3;
    private bool expandSubMenu4;

    private string NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }
}

